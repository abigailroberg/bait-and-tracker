<div class="form-container">
  <form id='signup-form'>
  <div class="form-group">
    <label class="text-white" for="name-signup">Name</label>
    <input type="text" class="form-control" id="name-signup" placeholder="Name">
  </div>
  <div class="form-group">
    <label class="text-white" for="email-signup">Email</label>
    <input type="email" class="form-control" id="email-signup" placeholder="Email">
  </div>
  <div class="form-group">
    <label class="text-white" for="phone-signup">Phone Number</label>
    <input type="text" class="form-control" id="phone-signup" placeholder="Phone">
  </div>
  <div class="form-group">
    <label class="text-white" for="password-signup">Password</label>
    <input type="password" class="form-control" id="password-signup" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-primary signup-form">Submit</button>
</form>
  <div class="form-login-text">
    <p>Already have an account?</p>
    <a href="/login">Sign in instead</a>
  </div>

</div>

<script src="/javascript/signup.js"></script>