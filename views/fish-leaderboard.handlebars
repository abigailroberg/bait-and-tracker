<h1>Fishing Tournament</h1>
<!-- This date is replaced by the current date from the main.js file -->
<h2 id="date">Current date</h2>

<!-- button for new fish -->
{{#if loggedIn}}
<a href="/profile/add">Upload your latest Catch!</a>
{{/if}}

<!-- Table -->
{{#if fishes.length}}
<table class="table table-dark table-striped table-responsive">
  <thead>
    <tr>
      <th scope="col">Place</th>
      <th scope="col">Angler</th>
      <th scope="col">Length</th>
      <th scope="col">Weight</th>
      <th scope="col">Photo</th>
    </tr>
  </thead>
  <tbody>
  
    <!-- Loop through each competitor and display a row -->
    {{#each fishes as |fish|}}

    <tr>
      <th class="trophy-cell" scope="row"></th>
      <!-- Get name of competitor -->
      <td>
        <!-- If the user is logged in, show the names as links to link to their profile. Otherwise show them as static text -->
        <a href="/profile/competitor/{{fish.competitor_id}}">{{fish.competitor.name}}</a>
      </td>

      <!-- Get fish length -->
      <td>{{fish.length}}"</td>

      <!-- Get fish weight -->
      <td>{{fish.weight}} lbs.</td>

      <td>
        <div>
          <img src={{fish.picture}} alt="">
        </div>
      </td>
    </tr>
    {{/each}}
  </tbody>
  </table>
  {{/if}}

  <script src="/javascript/homepage.js" async defer></script> 